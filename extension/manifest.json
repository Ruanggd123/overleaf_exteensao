{
    "manifest_version": 3,
    "name": "Overleaf Hybrid Compiler",
    "version": "2.2.0",
    "description": "Compila projetos Overleaf usando servidor local ou cloud (fallback autom√°tico).",
    "permissions": [
        "activeTab",
        "storage",
        "downloads"
    ],
    "host_permissions": [
        "https://www.overleaf.com/*",
        "https://overleaf.com/*",
        "http://localhost:8765/*",
        "https://*.up.railway.app/*",
        "https://*.onrender.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.overleaf.com/project/*",
                "https://overleaf.com/project/*"
            ],
            "js": [
                "jszip.min.js",
                "utils.js",
                "extractor.js",
                "synchronizer.js",
                "content.js"
            ],
            "css": [
                "styles.css"
            ],
            "run_at": "document_start"
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}